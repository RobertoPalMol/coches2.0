<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textoBuscar"
            android:layout_width="359dp"
            android:layout_height="46dp"
            android:layout_marginTop="156dp"
            android:hint="Intoduce el modelo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/botonBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Buscar"
            app:layout_constraintEnd_toEndOf="@+id/textoBuscar"
            app:layout_constraintStart_toStartOf="@+id/textoBuscar"
            app:layout_constraintTop_toBottomOf="@+id/textoBuscar" />

        <Button
            android:id="@+id/cochesList"
            android:layout_width="254dp"
            android:layout_height="55dp"
            android:layout_marginTop="48dp"
            android:text="Coches disponibles"
            app:layout_constraintEnd_toEndOf="@+id/textoBuscar"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="@+id/textoBuscar"
            app:layout_constraintTop_toTopOf="parent" />
        <FrameLayout
            android:id="@+id/lista_coches"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/cochesList"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>