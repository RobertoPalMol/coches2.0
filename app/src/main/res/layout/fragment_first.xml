<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment"
    android:background="@drawable/los_santos">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textoBuscar"
            android:layout_width="359dp"
            android:layout_height="46dp"
            android:layout_marginTop="64dp"
            android:hint="Intoduce el modelo"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/botonBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Buscar"
            app:layout_constraintEnd_toEndOf="@+id/textoBuscar"
            app:layout_constraintStart_toStartOf="@+id/textoBuscar"
            app:layout_constraintTop_toBottomOf="@+id/textoBuscar" />

        <Button
            android:id="@+id/cochesList"
            android:layout_width="254dp"
            android:layout_height="55dp"
            android:layout_marginTop="224dp"
            android:text="Ver coches disponibles"
            app:layout_constraintEnd_toEndOf="@+id/textoBuscar"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="@+id/textoBuscar"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/lista_coches"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cochesList"
            app:layout_constraintVertical_bias="0.96" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="343dp"
            android:layout_height="66dp"
            android:layout_marginTop="292dp"
            android:fontFamily="@font/pricedow"
            android:text="Novedades:"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/novedad"
            android:layout_width="342dp"
            android:layout_height="313dp"
            android:layout_marginTop="67dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>