<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom">


    <ImageView
        android:id="@+id/imagenCoche"
        android:layout_width="331dp"
        android:layout_height="270dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/precioCoche"
        android:layout_width="322dp"
        android:layout_height="44dp"
        android:layout_marginTop="516dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/pricedow"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/idCoche"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="@+id/idCoche"
        app:layout_constraintTop_toTopOf="@+id/idCoche" />

    <TextView
        android:id="@+id/tiendaId"
        android:layout_width="320dp"
        android:layout_height="46dp"
        android:layout_marginBottom="228dp"
        android:fontFamily="@font/pricedow"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/precioCoche"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/precioCoche" />

    <TextView
        android:id="@+id/idCoche"
        android:layout_width="335dp"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/pricedow"
        android:textSize="34sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.651"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/velocidadId"
        android:layout_width="317dp"
        android:layout_height="45dp"
        android:layout_marginTop="108dp"
        android:fontFamily="@font/pricedow"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/tiendaId"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tiendaId"
        app:layout_constraintTop_toBottomOf="@+id/tiendaId" />


</androidx.constraintlayout.widget.ConstraintLayout>